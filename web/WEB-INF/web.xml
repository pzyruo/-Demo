<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>oneFilter</filter-name>
        <filter-class>com.pzyruo.filter.oneFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>oneFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserFindServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.UserFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAddServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.QuestionAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionFindServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.QuestionFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.QuestionDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionFindByIdServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.QuestionFindByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.QuestionUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RandomServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.RandomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExamServlet</servlet-name>
        <servlet-class>com.pzyruo.Controller.ExamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExamServlet</servlet-name>
        <url-pattern>/exam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RandomServlet</servlet-name>
        <url-pattern>/question/random</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <url-pattern>/question/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionFindByIdServlet</servlet-name>
        <url-pattern>/question/ByIDfind</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <url-pattern>/question/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionFindServlet</servlet-name>
        <url-pattern>/question/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAddServlet</servlet-name>
        <url-pattern>/question/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFindServlet</servlet-name>
        <url-pattern>/user/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>